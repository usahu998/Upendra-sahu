10 #pat="^[0-9]{3}\s[0-9]{3}$ | ^[0-9]{3}$[0-9]{3}$ "
11
12 pat="[a-zA-Z0-9]"
13 pat="[a-zA-Z0-9_.+-]* "
14 pat="@[a-zA-Z0-9]+"
15 pat="[.a-zA-Z]{2}$"
16 pat="[a-zA-Z0-9][a-zA-Z0-9_.+-]*@[a-zA-Z0-9]+([.][a-zA-Z]{2,4}$)[.a-zA-Z]$
